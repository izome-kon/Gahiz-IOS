<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/freshchat_calendar_timeslots_data_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:visibility="visible"
    android:visibility="gone">

    <include
        layout="@layout/freshchat_fragment_calendar_all_timeslots"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/freshchat_calendar_show_more_time_slots_button"
        style="?attr/freshchatCalendarOutlineButtonStyle"
        android:text="@string/freshchat_calendar_show_more_time_slots" />

</LinearLayout>