<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/freshchat_calendar_retry_option_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone"
    tools:visibility="visible">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/freschat_calendar_something_went_wrong_label"
        style="?attr/freshchatCalendarSomethingWentWrongTextStyle" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/freshchat_calendar_retry_button"
        style="?attr/freshchatCalendarOutlineButtonStyle"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/freshchat_calendar_timeslots_retry" />

</RelativeLayout>